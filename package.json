{
  "name": "council.ai",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:web": "npm run dev -w @council/web",
    "dev:api": "npm run dev -w @council/api",
    "build": "npm run build --workspaces --if-present",
    "build:web": "npm run build -w @council/web",
    "build:api": "npm run build -w @council/api",
    "lint": "npm run lint --workspaces --if-present",
    "start": "concurrently \"npm run start:api\" \"npm run start:web\"",
    "start:web": "npm run start -w @council/web",
    "start:api": "npm run start -w @council/api"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "typescript": "^5.8.3"
  }
}
